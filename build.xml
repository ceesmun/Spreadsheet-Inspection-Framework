			<arg value="${dist.dir}\sif.jar"/>
			<arg value="-out:${dist.dir}\ikvm-2-x64-multijar\sif.exe"/>
			<arg value="-r:C:\Windows\Microsoft.NET\Framework64\v2.0.50727\mscorlib.dll"/>
