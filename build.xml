		<echo message="Converting for .NET 2.0 64-Bit CLR..." />
			
		<exec executable="ikvmc" dir="${dist.dir}">
			<arg value="-nostdlib"/>
			<arg value="sif_fat.jar"/>
			<arg value="-out:sif_fat_2_x64.exe"/>
